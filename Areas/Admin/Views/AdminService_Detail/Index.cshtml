@model IEnumerable<WebBanThu.Areas.Admin.Models.Service_Detail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<section class="content">
    <div class="container-fluid">
        <h1>Quản Lý Lịch Dịch Vụ</h1>
        <a asp-action="Create" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50"></span>
            <span class="text">Thêm Lịch Dịch Vụ</span>
        </a>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdService)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGian)
                        </th>
                         <th>
                            @Html.DisplayNameFor(model => model.SoLuongCa)
                        </th>
                         <th>
                            @Html.DisplayNameFor(model => model.NgayThucHien)
                        </th>
                        <th>
                            Thao Tác
                        </th>
                        <th></th>
                    </tr>
                </thead>
                            <tfoot>
                    <tr>
                         <th>
                            @Html.DisplayNameFor(model => model.IdService)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGian)
                        </th>
                         <th>
                            @Html.DisplayNameFor(model => model.SoLuongCa)
                        </th>
                         <th>
                            @Html.DisplayNameFor(model => model.NgayThucHien)
                        </th>
                        <th>
                            Thao Tác
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                            <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdService)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThoiGian)
                                </td>
                                    <td>
                                @Html.DisplayFor(modelItem => item.SoLuongCa)
                                    </td>
                                    <td>
                                @Html.DisplayFor(modelItem => item.NgayThucHien)
                                    </td>
                                <td>
                                    <a asp-action="Edit" asp-route-IdService="@item.IdService" asp-route-IdTime="@item.IdTime" class="btn btn-info btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">Sửa</span>
                                    </a>
                                <a asp-action="Details" asp-route-IdService="@item.IdService" asp-route-IdTime="@item.IdTime" class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Xem</span>
                                    </a>
                                <a asp-action="Delete" asp-route-IdService="@item.IdService" asp-route-IdTime="@item.IdTime" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                        <span class="text">Xóa</span>
                                    </a>
                                </td>
                            </tr>
                    }
                </tbody>
                        </table>
                    </div>
                 </div>
              </div>
        </div>
    </div>
</section>